{
  "enabled": true,
  "name": "Cleanup Old Vitest Processes",
  "description": "pnpm test実行前に古いvitestプロセスを終了させる",
  "version": "1",
  "when": {
    "type": "preToolUse",
    "toolTypes": [
      "shell"
    ]
  },
  "then": {
    "type": "runCommand",
    "command": "pkill -f 'vitest' || true",
    "timeout": 5
  },
  "workspaceFolderName": "vote-board-game",
  "shortName": "cleanup-vitest-processes"
}
{
  "name": "@vote-board-game/infra",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "cdk": "cdk",
    "deploy": "pnpm build && cdk deploy --all",
    "synth": "pnpm build && cdk synth",
    "diff": "pnpm build && cdk diff",
    "destroy": "cdk destroy --all",
    "type-check": "tsc --noEmit",
    "test": "pnpm --filter @vote-board-game/api build && vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf cdk.out dist *.tsbuildinfo"
  },
  "dependencies": {
    "@vote-board-game/shared": "workspace:*",
    "aws-cdk-lib": "^2.174.2",
    "cdk-nag": "^2.30.6",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/source-map-support": "^0.5.10",
    "aws-cdk": "^2.174.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
